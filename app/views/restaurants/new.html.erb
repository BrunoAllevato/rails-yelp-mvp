<div class="row mt-3">

  <h1>Add your new restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORY %>
    <%= f.submit class: 'btn btn-warning', value: "Add Restaurant"%>
  <% end %>

  <div class="col-2">
    <%= link_to "Back to Homepage", restaurants_path, class: 'btn btn-primary mt-3' %>
  </div>
</div>
