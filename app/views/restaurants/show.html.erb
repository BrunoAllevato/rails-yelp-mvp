<div class="row mt-3">

  <h1><%= @restaurant.name %></h1>
  <p class="mt-3"><strong>Address: </strong><%= @restaurant.address %></p>
  <p><strong>Phone Number: </strong><%= @restaurant.phone_number %></p>
  <p><strong>Type of Food: </strong><%= @restaurant.category.capitalize %></p>

  <%# <div class="">
  <label for="reviewing">Write your review about "<%= @restaurant.name %>
  <%# <input type="text" id="reviewing" class="col-4">
  <input type="submit" id="reviewing">
  <%= link_to "Submit", restaurants_path, class: 'btn btn-primary mt-3' %>
  <%# </div> %>

  <p><strong>Reviews:</strong></p>
  <p><%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: 'btn btn-danger' %></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %>
        <%= link_to review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash opacity-75 link-secondary"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <br>

  <div class="col-2">
    <%= link_to "Back to Homepage", restaurants_path, class: 'btn btn-primary mt-3' %>
  </div>

</div>
