<div class="container mt-3">
  <h1>Restaurants</h1>

  <ul>
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant) do %>
        <li><%= restaurant.name %></li>
      <% end %>
    <% end %>
  </ul>

  <div class="col-4">
    <%= link_to 'Add New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
  </div>

</div>
