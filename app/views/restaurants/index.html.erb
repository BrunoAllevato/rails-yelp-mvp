<div class="container mt-3">
  <h1>Restaurants</h1>

  <ul>
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant), class: "text-decoration-none link-primary d-block" do %>
        <%= restaurant.name %>
      <% end %>
    <% end %>
  </ul>

  <div class="col-4">
    <%= link_to 'Add New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
  </div>

</div>
